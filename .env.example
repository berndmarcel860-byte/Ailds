# ============================================================
# üåç System Environment Configuration
# ============================================================

# üé≠ Agent Identity
AGENT_NAME=Neo
AGENT_COMPANY=Next Quantum
AGENT_PROFILE=leadgen
LANGUAGE=de

# ============================================================
# üíæ Database
# ============================================================
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=aiagent
DB_PASS=YourSecurePassword
DB_NAME=ai_calls

# ============================================================
# üåê Asterisk ARI
# ============================================================
ARI_HOST=127.0.0.1
ARI_PORT=8088
ARI_USER=ai_agent
ARI_PASS=your_secure_password_here
ARI_APP=aiagent

# ============================================================
# üìÅ Asterisk Directories
# ============================================================
ASTERISK_SOUNDS_DIR=/var/lib/asterisk/sounds
ASTERISK_RECORDINGS_DIR=/var/spool/asterisk/recording

# ============================================================
# üéß Speech-to-Text (Faster Whisper)
# ============================================================
WHISPER_MODEL=small
WHISPER_DEVICE=cuda
WHISPER_COMPUTE_TYPE=int8_float16
WHISPER_LANGUAGE=de

# ============================================================
# üó£Ô∏è Text-to-Speech (Coqui TTS)
# ============================================================
# TTS_VOICE: Select TTS voice for professional, human-realistic speech
# - thorsten: Professional German male voice, ideal for lead generation
# - xttsv2: Voice cloning with custom reference (requires REFERENCE_WAV)
TTS_VOICE=thorsten

# Voice cloning reference (only used with TTS_VOICE=xttsv2)
REFERENCE_WAV=/var/lib/asterisk/sounds/aiagent/de_f_short.wav

# Model paths
COQUI_MODEL_XTTSV2=tts_models/multilingual/multi-dataset/xtts_v2
COQUI_MODEL_THORSTEN=tts_models/de/thorsten/vits-neon
COQUI_USE_GPU=true

# Professional speech settings for human-realistic output
TTS_RATE=0.98        # Conservative speech rate (0.5-1.5, default 0.98)
TTS_PITCH=0.95       # Slight pitch downshift for authority (0.5-1.5, default 0.95)

# Note: SSML breaks and breath features have been removed for more natural speech.
# Natural pauses are now handled via programmatic delays (see TTS_SENTENCE_PAUSE below)

# ============================================================
# üß† LLM (GPT / Ollama)
# ============================================================
USE_OLLAMA=False
OLLAMA_MODEL=llama3
OLLAMA_HOST=http://127.0.0.1:11434

OPENAI_API_KEY=sk-your-api-key-here
LLM_MODEL=gpt-4o-mini

# ============================================================
# üîä Audio / Conversation Parameters
# ============================================================
AUDIO_SAMPLE_RATE=8000
AUDIO_CHANNELS=1
MAX_RECORDING_DURATION=12
MAX_SILENCE_SEC=2
RESPONSE_TIMEOUT=3
MAX_CONVERSATION_TIME=300

# Natural pause between sentences (replaces SSML <break> tags)
# Increased for more professional, human-realistic delivery
TTS_SENTENCE_PAUSE=0.5

PARALLEL_RECORD_DELAY=0.2

# ============================================================
# üé≠ Role Management
# ============================================================
# ROLE: Select agent role (recover | invest)
# - recover: Fund recovery agent (KryptoXPay)
# - invest: Investment agent (Next Quantum)
ROLE=recover

ROLE_PATH_RECOVER=./roles/role_fund_recovery.txt
ROLE_PATH_INVEST=./roles/role_investment.txt

RECOVER_AGENT_NAME=KryptoXPay Agent
RECOVER_AGENT_COMPANY=KryptoXPay

INVEST_AGENT_NAME=Neo
INVEST_AGENT_COMPANY=Next Quantum
